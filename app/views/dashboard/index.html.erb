<div class="app-container">
    <!-- Sidebar -->
    <nav class="sidebar">
        <div class="sidebar-header">
            <div class="logo">Leet Planner</div>
        </div>
        
        <div class="sidebar-nav">
            <a href="#" class="nav-item active" data-page="dashboard">
                <span class="nav-icon" >‚è±Ô∏è</span>
                Dashboard
            </a>
            <a href="#" class="nav-item" data-page="calendar">
                <span class="nav-icon">üìÖ</span>
                Calendar
            </a>
        </div>

        <div class="user-info">
            <div class="user-info-header">
                <div class="user-avatar" id="userAvatar">U</div>
                <div class="user-name" id="userName">Loading...</div>
            </div>
            <button class="logout-btn" onclick="logout()">Sign Out</button>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Dashboard Page -->
        <div id="dashboardPage" class="page">
            <div class="page-header">
                <h1 class="page-title user-name">Dashboard</h1>
                <p class="page-subtitle">Track your time and stay productive</p>
            </div>
            
            <div class="content-area">
                <div class="timer-container">
                    <h2>Focus Timer</h2>
                    <div class="timer-display" id="timerDisplay">00:00:00</div>
                    
                    <div class="timer-controls">
                        <button class="timer-btn start" id="startBtn" onclick="startTimer()">Start</button>
                        <button class="timer-btn pause" id="pauseBtn" onclick="pauseTimer()" style="display: none;">Pause</button>
                        <button class="timer-btn reset" id="resetBtn" onclick="resetTimer()">Reset</button>
                    </div>
                    
                    <div class="focus-time-container">
                        <p class="focus-time-label">Set focus time</p>
                        <div class="focus-time-controls">
                            <input
                            type="number"
                            id="customTimerInput"
                            min="1"
                            max="240"
                            placeholder="Minutes"
                            class="focus-time-input"
                            />
                            <button class="timer-btn set" onclick="setCustomTimer()">Set Timer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Calendar Page -->
        <div id="calendarPage" class="page hidden">
            <div class="page-header">
                <h1 class="page-title">Calendar</h1>
                <p class="page-subtitle">Your Google Calendar events</p>
            </div>
            
            <div class="content-area">
                <div class="calendar-container">
                    <div class="calendar-header">
                        <div class="calendar-month" id="currentMonth">Loading...</div>
                        <div class="calendar-nav">
                            <button id="prevMonth">‚Üê Previous</button>
                            <button id="nextMonth">Next ‚Üí</button>
                            <button id="refreshCalendar">Refresh</button>
                        </div>
                    </div>
                    
                    <div id="calendarContent" class="loading">
                        Loading calendar events...
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>