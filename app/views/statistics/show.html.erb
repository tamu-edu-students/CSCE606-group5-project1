<div class="app-container">
  <%= render 'shared/navbar' %>

  <main class="main-content">
    <div class="container my-4">
      <div class="row">
        <div class="col">
          <h1 class="display-6 fw-bold mb-3">LeetCode Statistics</h1>
          <p class="text-muted">Track your coding progress</p>
        </div>
      </div>

      <% if @error_message %>
        <div class="alert alert-danger">
          <%= @error_message %>
        </div>
      <% end %>

      <!-- Statistics Overview -->
      <div class="row g-4 mb-4">
        <div class="col-md-4">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <div class="display-6 text-primary mb-2">üèÜ</div>
              <div class="display-4 fw-bold"><%= @stats[:total] %></div>
              <p class="text-muted">Total Solved</p>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <div class="display-6 text-info mb-2">üìÖ</div>
              <div class="display-4 fw-bold"><%= @recent_stats[:week] %></div>
              <p class="text-muted">Last 7 Days</p>
            </div>
          </div>
        </div>

        <div class="col-md-4">
          <div class="card text-center shadow-sm">
            <div class="card-body">
              <div class="display-6 text-success mb-2">üìà</div>
              <div class="display-4 fw-bold"><%= @recent_stats[:month] %></div>
              <p class="text-muted">Last 30 Days</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Difficulty Breakdown -->
      <div class="card shadow-sm mb-4">
        <div class="card-header">
          <h3 class="card-title mb-0">üìä Difficulty Breakdown</h3>
        </div>
        <div class="card-body">
          <% if @stats[:total] > 0 %>
            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <span class="fw-bold">Easy</span>
                <span class="badge bg-success"><%= @stats[:easy] %></span>
              </div>
              <div class="progress mb-3">
                <div class="progress-bar bg-success" style="width: <%= ((@stats[:easy].to_f / @stats[:total]) * 100).round(1) %>%"></div>
              </div>
            </div>

            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <span class="fw-bold">Medium</span>
                <span class="badge bg-warning"><%= @stats[:medium] %></span>
              </div>
              <div class="progress mb-3">
                <div class="progress-bar bg-warning" style="width: <%= ((@stats[:medium].to_f / @stats[:total]) * 100).round(1) %>%"></div>
              </div>
            </div>

            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <span class="fw-bold">Hard</span>
                <span class="badge bg-danger"><%= @stats[:hard] %></span>
              </div>
              <div class="progress">
                <div class="progress-bar bg-danger" style="width: <%= ((@stats[:hard].to_f / @stats[:total]) * 100).round(1) %>%"></div>
              </div>
            </div>
          <% else %>
            <p class="text-muted text-center py-4">No difficulty data available</p>
          <% end %>
        </div>
      </div>

      <!-- Activity Summary -->
      <div class="row g-4">
        <div class="col-md-6">
          <div class="card shadow-sm">
            <div class="card-body">
              <h4 class="card-title">üî• Weekly Activity</h4>
              <div class="display-6 fw-bold mb-2"><%= @recent_stats[:week] %> problems</div>
              <p class="text-muted mb-0">
                <% if @recent_stats[:week] > 0 %>
                  Keep up the momentum!
                <% else %>
                  No activity this week
                <% end %>
              </p>
            </div>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card shadow-sm">
            <div class="card-body">
              <h4 class="card-title">üöÄ Monthly Progress</h4>
              <div class="display-6 fw-bold mb-2"><%= @recent_stats[:month] %> problems</div>
              <p class="text-muted mb-0">
                <% if @recent_stats[:month] > 0 %>
                  Great progress this month!
                <% else %>
                  No activity this month
                <% end %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

